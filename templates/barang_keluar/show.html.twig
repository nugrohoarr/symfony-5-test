{% extends 'base.html.twig' %}

{% block title %}BarangKeluar{% endblock %}

{% block body %}
<div class="section-header">
  <h1>Detail Barang Keluar</h1>
</div>
<div class="row">
  <div class="col-12">
    <div class="card">
      
    <div class="card">
    <div class="card-header">
    <h4 class="text-uppercase">{{ barang_keluar.barang.namaBarang }}</h4>
    </div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>Nama Barang</label>
              <p>{{ barang_keluar.barang.namaBarang }}</p>
            </div>
            <div class="form-group">
              <label>Deskripsi</label>
              <p>{{ barang_keluar.deskripsi }}</p>
            </div>
            <div class="form-group">
              <label>Jumlah Keluar</label>
              <p>{{ barang_keluar.jmlKeluar }}</p>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>Tanggal Keluar</label>
              <p>{{ barang_keluar.tglKeluar ? barang_keluar.tglKeluar|date('Y-m-d') : '' }}</p>
            </div>
          </div>
          <div class="col-sm-12">
              {{ include('barang_keluar/_delete_form.html.twig') }}
          </div>
        </div>
      </div>  
</div>
{% endblock %}
