{% extends 'base.html.twig' %}

{% block title %}BarangMasuk index{% endblock %}


{% block body %}
<div class="section-header">
  <h1>Barang Masuk List</h1>
</div>

<div class="section-body">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4>Data Barang</h4>
          <div class="card-header-action">
            <a href="{{ path('app_barang_masuk_new') }}"
              >
              <button class="btn btn-lg btn-info" type="button">
                <i class="fas fa-plus"></i> Tambah Baru
              </button></a
            >
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped" id="table-1">
              <thead>
            <tr>
                <th>Id</th>
                <th>Barang</th>
                <th>Tgl Masuk</th>
                <th>Spesifikasi</th>
                <th>Jml Masuk</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for barang_masuk in barang_masuks %}
                <tr>
                    <td>{{ barang_masuk.id_masuk }}</td>
                    <td>{{ barang_masuk.nama_barang }}</td>
                    <td>{{ barang_masuk.tgl_masuk ? barang_masuk.tgl_masuk|date('Y-m-d') : '' }}</td>
                    <td>{{ barang_masuk.spesifikasi }}</td>
                    <td>{{ barang_masuk.jml_masuk }}</td>
                    <td>
                        <a href="{{ path('app_barang_masuk_show', {'id': barang_masuk.id_masuk}) }}" class="btn btn-warning btn-action mr-1" data-toggle="tooltip" title="Lihat Detail"><i class="fas fa-eye"></i></a>
                        <a
                          href="{{ path('app_barang_masuk_edit', {'id': barang_masuk.id_masuk}) }}"
                          class="btn btn-primary btn-action mr-1"
                          data-toggle="tooltip"
                          title="Edit"
                        >
                          <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
