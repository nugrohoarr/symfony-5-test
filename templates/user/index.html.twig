{% extends 'base.html.twig' %} 

{% block body %}
<div class="section-header">
  <h1>User List</h1>
</div>

<div class="section-body">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4>Data User</h4>
          <div class="card-header-action">
            <a href="{{ path('app_user_new') }}"
              ><button class="btn btn-lg btn-info" type="button">
                <i class="fas fa-plus"></i> Tambah Baru
              </button></a
            >
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped" id="table-1">
              <thead>
                <tr>
                  <th class="text-center">ID</th>
                  <th>Nama</th>
                  <th>Username</th>
                  <th>Level</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                {% for user in users %}
                <tr>
                  <td class="text-center">{{ user.id }}</td>
                  <td>
                    <span class="text-uppercase">{{ user.nama }}</span>
                    <div class="table-links">
                      <a href="{{ path('app_user_edit', { id: user.id }) }}"
                        ><span class="badge badge-primary"
                          >Edit <i class="fas fa-pencil-alt"></i></span
                      ></a>
                    </div>
                  </td>
                  <td>@{{ user.username }}</td>
                  <td class="text-capitalize">
                    <div class="badge badge-secondary">{{ user.level }}</div>
                  </td>
                  <td>
                    <a
                      href="{{ path('app_user_edit', { id: user.id }) }}"
                      class="btn btn-primary btn-action mr-1"
                      data-toggle="tooltip"
                      title="Edit"
                    >
                      <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a
                      href="{{ path('app_user_delete', { id: user.id }) }}"
                      class="btn btn-danger btn-action"
                      data-toggle="tooltip"
                      title="Delete"
                    >
                      <i class="fas fa-trash"></i>
                    </a>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
